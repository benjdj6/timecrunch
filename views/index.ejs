<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.3/angular.min.js"></script>
    <script src="https://unpkg.com/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="timecrunch">
    <nav class="navbar navbar-default" ng-controller="NavCtrl">
      <div class="col-md-1"></div>
      <ul class="nav navbar-nav">
        <li><h1 ui-sref="home">time crunch</h1></li>
        <li><a ui-sref="home">Home</a></li>
        <li><a ui-sref="food">Food</a></li>
        <li><a ui-sref="recipes">Recipes</a></li>
      </ul>
    </nav>

    <div class="row">
      <div class="col-md-11 col-md-offset-1">
        <ui-view></ui-view>
      </div>
    </div>

    <!-- Template for home/dashboard -->
    <script type="text/ng-template" id="/home.html">
      <div class="row">
        Dashboard
      </div>
    </script>

    <!-- Template for food list -->
    <script type="text/ng-template" id="/food.html">
      <div class="row">
        <div class="row">
          <div class="col-md-2 sidebar">
            <p><a href="#">Delete Selected</a></p>
          </div>
          <div class="col-md-9">
            <div class="row addfood">
              <form ng-submit="addFood();">
                <label>Name: </label>
                <input type="text" placeholder="Lettuce" ng-model="name"/>
                <label>Sell By: </label>
                <input type="date" placeholder="YYYY-MM-DD" ng-model="sellBy"/>
                <label>Quantity/Weight(lbs): </label>
                <input type="number" placeholder="1" ng-model="amount"/>
                <label>Category: </label>
                <select ng-model="category" ng-options="opt for opt in categories">
                  <option value="">None</option>
                </select>

                <button type="submit" class="btn btn-primary">Add Food</button>    
              </form>
            </div>
            <div class="row">
              <div class="col-md-offset-9 col-md-3">
                <label>Filter Category: </label>
                <select ng-model="filterCat" ng-options="cat for cat in categories">
                  <option value="">None</option>
                </select>
              </div>
            </div>
            <div class="row foodlist">
              <div class="col-md-4 col-md-offset-1" ng-click="sortBy='name'"><b>Name</b></div>
              <div class="col-md-2" ng-click="sortBy='sellBy'"><b>Sell By Date</b></div>
              <div class="col-md-2" ng-click="sortBy='amount'"><b>Quantity/Weight (lbs)</b></div>
              <div class="col-md-3" ng-click="sortBy='category'"><b>Category</b></div>
            </div>
            <div ng-repeat="food in foods | filter: filter() | orderBy: sortBy">
              <div class="row food" ng-class-even="'even'" ng-class-odd="'odd'">
                <div class="col-md-1">
                  <button class="btn-danger btn-xs" ng-click="removeFood(food)">Delete</button>
                </div>
                <div class="col-md-4"><b>{{food.name}}</b></div>
                <div class="col-md-2" ng-bind="food.sellBy | date: 'MM/dd/yyyy'"></div>
                <div class="col-md-2">{{food.amount}}</div>
                <div class="col-md-3">{{food.category}}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </script>

    <!-- Template for recipe list -->
    <script type="text/ng-template" id="/recipes.html">
      <div class="row">
        <div class="col-md-2 sidebar">
          <div class="row">
            <p><a ui-sref="recipeform">Add New Recipe</a></p>
          </div>
          <div class="row">
            <p><a href="#">Delete Selected</a></p>
          </div>
        </div>
        <div class="col-md-9">
          <div class="row recipelist">
            <div class="col-md-3 col-md-offset-1"><b>Name</b></div>
            <div class="col-md-2"><b>Prep Time</b></div>
            <div class="col-md-3"><b>Instructions</b></div>
          </div>
          <div ng-repeat="recipe in recipes">
            <div class="row recipe" ng-class-even="'even'" ng-class-odd="'odd'">
              <div class="col-md-1">
                <button class="btn-danger btn-xs" ng-click="removeRecipe(recipe);">Delete</button>
              </div>
              <div class="col-md-3">
                <a ui-sref="recipe({id: recipe._id})"><b>{{recipe.name}}</b></a>
              </div>
              <div class="col-md-2">{{recipe.prepTime}}</div>
              <div class="col-md-3">{{recipe.instructions}}</div>
            </div>
          </div>
        </div>
      </div>
    </script>

    <!--  Template for add recipe form -->
    <script type="text/ng-template" id="/recipeform.html">
      <div class="row addrecipe">
        <form ng-submit="addRecipe();">
          <div class="row">
            <div class="col-md-3">
              <label><p>Name: </p></label>
            </div>
            <div class="col-md-9">
              <input type="text" placeholder="Pizza" ng-model="name"/>
            </div>
          </div>
          <div ng-repeat="ingredient in ingredients">
            <div class="row ingredient">
              <div class="col-md-2 col-md-offset-3">
                {{ingredient}}
              </div>
              <div class="col-md-1">
                <button type="button" class="btn-danger btn-xs" ng-click="removeIngredient(ingredient);">Remove</button>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label><p>Ingredients: </p></label>
            </div>
            <div class="col-md-2">
              <input type="text" placeholder="Cumin" ng-model="ing_name"/>
            </div>
            <div class="col-md-2">
              <label>Amount: </label>
              <input type="text" placeholder="1" size="4" ng-model="ing_amount"/>
            </div>
            <div class="col-md-2">
              <label>Unit: </label>
              <input type="text" placeholder="g" size="4" ng-model="ing_unit"/>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-xs btn-primary" ng-click="addIngredient();">Add Ingredient</button>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label><p>Preparation Time (minutes): </p></label>
            </div>
            <div class="col-md-9">
              <input type="number" placeholder="30" ng-model="prepTime"/>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <label><p>Instructions (link to website): </p></label>
            </div>
            <div class="col-md-9">
              <input type="url" placeholder="http://www.food.com/" ng-model="instructions"/>
            </div>
          </div>

          <div class="row">
            <div class="col-md-1">
              <a ui-sref="recipes">Back</a>
            </div>
            <div class="col-md-1">
              <button type="submit" class="btn btn-primary">Add Recipe</button>
            </div>  
          </div>  
        </form>
      </div>
    </script>

    <!-- Template for recipe details page -->
    <script type="text/ng-template" id="/recipe.html">
      <h2>{{recipe.name}}</h2>
      <p><b>Time:</b> {{recipe.prepTime}}</p>
      <p><b>Ingredients:</b></p>
      <div ng-repeat="ingredient in recipe.ingredients">
        <p>{{ingredient}}</p>
      </div>
      <p><b>More info:</b> <a href="{{recipe.instructions}}">{{recipe.instructions}}</a></p>
    </script>
  </body>
</html>
