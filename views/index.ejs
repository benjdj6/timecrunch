<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.3/angular.min.js"></script>
    <script src="https://unpkg.com/angular-ui-router/release/angular-ui-router.min.js"></script>

    <script src="/javascripts/angularApp.js"></script>
    <script src="/javascripts/factories/foodsFactory.js"></script>
    <script src="/javascripts/factories/ingredientsFactory.js"></script>
    <script src="/javascripts/factories/recipesFactory.js"></script>
    <script src="/javascripts/factories/authFactory.js"></script>
  </head>
  <body ng-app="timecrunch">
    <div class="container-fluid">
      <nav class="navbar" ng-controller="NavCtrl">
        <div class="navbar-header">
          <a class="navbar-brand" ui-sref="home"><b>time crunch</b></a>
        </div>
        <ul class="nav navbar-nav">
          <li><a ui-sref="home">Home</a></li>
          <li ng-show="isLoggedIn()"><a ui-sref="food">Food</a></li>
          <li><a ui-sref="recipes">Recipes</a></li>
          <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
          <li ng-show="isLoggedIn()"><a ui-sref="home" ng-click="logOut()">Log Out</a></li>
          <li ng-hide="isLoggedIn()"><a ui-sref="login">Log In</a></li>
          <li ng-hide="isLoggedIn()"><a ui-sref="register">Register</a></li>
        </ul>
      </nav>

      <div class="row">
        <div class="col-md-11 col-md-offset-1">
          <ui-view></ui-view>
        </div>
      </div>
    </div>
  </body>
</html>
